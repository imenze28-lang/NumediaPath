<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/iv_pref_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@color/primary"
        android:alpha="0.8"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votre prochain\nvoyage commence ici"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_rounded_top_sheet"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_pref_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginTop="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vos envies du moment ?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_activities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:chipSpacing="8dp"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_culture"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Culture ðŸŽ¨"
                    android:checked="true"
                    app:chipBackgroundColor="@color/bg_chip_state_list"
                    android:textColor="@color/text_dark"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_nature"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nature ðŸŒ¿"
                    app:chipBackgroundColor="@color/bg_chip_state_list"
                    android:textColor="@color/text_dark"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_shopping"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shopping ðŸ›ï¸"
                    app:chipBackgroundColor="@color/bg_chip_state_list"
                    android:textColor="@color/text_dark"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_food"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gastro ðŸ¥"
                    app:chipBackgroundColor="@color/bg_chip_state_list"
                    android:textColor="@color/text_dark"/>
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    app:tint="@color/primary"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Votre Budget Max"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"/>

                <TextView
                    android:id="@+id/tv_budget_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000 â‚¬"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"/>
            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="3000"
                android:stepSize="50"
                android:value="1000"
                app:thumbColor="@color/primary"
                app:trackColorActive="@color/primary"
                app:trackColorInactive="#E0E0E0"
                android:layout_marginBottom="32dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="@color/primary"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Temps disponible"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"/>

                <TextView
                    android:id="@+id/tv_duration_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4h 00"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"/>
            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="30"
                android:valueTo="600"
                android:stepSize="30"
                android:value="240"
                app:thumbColor="@color/primary"
                app:trackColorActive="@color/primary"
                app:trackColorInactive="#E0E0E0"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Niveau d'effort souhaitÃ©"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggle_effort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:checkedButton="@id/btn_effort_2"
                android:layout_marginBottom="40dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_effort_1"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Cool\nðŸš¶â€â™‚ï¸"
                    android:textSize="12sp"
                    android:lines="2"
                    android:paddingVertical="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_effort_2"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Actif\nðŸ¥¾"
                    android:textSize="12sp"
                    android:lines="2"
                    android:paddingVertical="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_effort_3"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Sportif\nðŸ§—"
                    android:textSize="12sp"
                    android:lines="2"
                    android:paddingVertical="12dp"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_generate"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Trouver mon aventure âž”"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="32dp"
                android:backgroundTint="@color/primary"
                android:layout_marginBottom="16dp"
                app:elevation="8dp"/>

            <TextView
                android:id="@+id/btn_view_favorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voir mes favoris â¤ï¸"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:padding="12dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>