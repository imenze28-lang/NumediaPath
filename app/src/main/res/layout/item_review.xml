<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- ✅ Avatar avec ton image personnalisée -->
            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sophie"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_avatar_rounded"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_review_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sophie D."
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Membre TravelShare"
                    android:textSize="10sp"
                    android:textColor="@color/primary"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_review_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ 5.0"
                android:textStyle="bold"
                android:textColor="#F1C40F"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Superbe balade ! Je recommande vraiment le musée."
            android:textColor="@color/text_grey"
            android:textSize="13sp"
            android:maxLines="3"
            android:ellipsize="end"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>